

<div class="container my-3">
    <div class="row">
        <div class="col-md-6 ">
        <% if (user) { %>
            <p>Hoşgeldin <%= user.name %></p>
           <% } else { %>
            <p>Hoşgeldin misafir.</p>
           <% } %>
        </div>
        <div class="col-md-6 text-right d-flex justify-content-end">
          <button type="button" class="btn btn-warning my-3 mr-2"><a href ="/admin/posts/add-post">Add Post</a></button>
        <form action="/logout" method="GET">
            <button type="submit" class="btn btn-danger my-3  ">Logout</button>
        </form>
        </div>
    </div>
  

    <table class="table table-striped"> 
        
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Body</th>
            <th scope="col">Categories</th>
            <th scope="col">İşlem</th>

          </tr>
        </thead>
        <tbody>
            <% let counter = 1; %>
            <% posts.forEach(post => { %>  
          <tr>
            
            <th scope="row"><%= counter++ %></th>    
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td><%= post.categories %></td>
            <td>
                <button type="button" class="btn btn-outline-warning btn-sm"><a href ="posts/edit/<%= post._id %>">Düzenle</a></button>
                <button type="button" class="btn btn-outline-danger btn-sm"><a href ="posts/delete/<%= post._id %>">Sil</a></button>
            </td>
           
          </tr>
          <% }) %>
        </tbody>
        
      </table>

</div>
