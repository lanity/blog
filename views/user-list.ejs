

<div class="container my-3">
    <div class="row">
        <div class="col-md-6 ">
        <% if (user) { %>
            <p>Hoşgeldin <%= user.name %></p>
           <% } else { %>
            <p>Hoşgeldin misafir.</p>
           <% } %>
        </div>
        <div class="col-md-6 text-right">
        <form action="/logout" method="GET">
            <button type="submit" class="btn btn-danger my-3  ">Logout</button>
        </form>
        </div>
    </div>
  

    <table class="table table-striped"> 
        
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">E-posta</th>
            <th scope="col">İşlem</th>

          </tr>
        </thead>
        <tbody>
            <% let counter = 1; %>
            <% users.forEach(user => { %>  
          <tr>
            
            <th scope="row"><%= counter++ %></th>    
            <td><%= user.name %></td>
            <td><%= user.lastname %></td>
            <td><%= user.email %></td>
            <td>
                <button type="button" class="btn btn-outline-warning btn-sm"><a href ="/users/edit/<%= user._id %>">Düzenle</a></button>
                <button type="button" class="btn btn-outline-danger btn-sm"><a href ="/users/delete/<%= user._id %>">Sil</a></button>
            </td>
           
          </tr>
          <% }) %>
        </tbody>
        
      </table>

</div>
